{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={database path}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "AzureGateway": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "AzureGateway": "Warning",
        "AzureGateway.Api.Services.FileMonitoringService": "Warning",
        "AzureGateway.Api.Services.FolderWatcher": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },

  "ConfigurationDefaults": {
    "Azure": {
      "StorageConnectionString": "",
      "DefaultContainer": "gateway-data",
      "MaxConcurrentUploads": 3,
      "ChunkSizeBytes": 4194304
    },
    "Upload": {
      "AutoStart": true,
      "ProcessingIntervalSeconds": 5,
      "MaxConcurrentUploads": 3,
      "MaxRetries": 5,
      "RetryDelaySeconds": 30,
      "MaxRetryDelayMinutes": 15,
      "MaxFileSizeMB": 100,
      "ArchiveOnSuccess": true,
      "DeleteOnSuccess": false,
      "NotifyOnCompletion": true,
      "NotifyOnFailure": true
    },
    "FileMonitoring": {
      "AutoStart": false,
      "DefaultFilePattern": "*.*",
      "ProcessExistingFiles": false
    },
    "ApiPolling": {
      "AutoStart": false
    },
    "Api": {
      "TempDirectory": "",
      "MaxResponseSizeMB": 50,
      "DefaultPollingInterval": 5,
      "TimeoutSeconds": 30
    },
    "Monitoring": {
      "FolderPath": "",
      "ArchivePath": ""
    },
    "System": {
      "CleanupDays": 30,
      "MaxLogSizeMB": 100,
      "HealthCheckIntervalMinutes": 5
    }
  }
}